<div class="profile">
  {{> avatar}}
  <form class="profile__form-edit">
    <label class="profile__label">
      <p class="profile__text">{{email}}</p>
      <input placeholder="Почта" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{login}}</p>
      <input placeholder="Логин" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{name}}</p>
      <input placeholder="Имя" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{surname}}</p>
      <input placeholder="Купова" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{nickname}}</p>
      <input placeholder="Имя в чате" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{cite}}</p>
      <input placeholder="Москва Россия" class="profile__field"></input>
    </label>
    <label class="profile__label">
      <p class="profile__text">{{telephone}}</p>
      <input placeholder="Телефон" class="profile__field"></input>
    </label>
    <div class="profile__bottom">
      <div class="profile__icon-edit">
        <span class="profile__text-edit">Изменить пароль</span>
      </div>
      <div class="profile__icon-exit">
        <span class="profile__text-exit">Выйти</span>
      </div>
    </div>

    {{> button}}
  </form>

</div>