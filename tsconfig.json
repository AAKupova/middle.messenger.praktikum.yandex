{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "node",
    "typeRoots": ["../src/@types", "./node_modules/@types"],
    "pretty": true
  },
  "exclude": [
    "node_modules"
  ]
}