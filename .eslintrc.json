{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "document": true,
    "window": true,
    "ignoreRestSiblings": true
  },
  "rules": {
    "max-len": [2, 100],
    "import/prefer-default-export": 0,
    "no-unused-vars": 2,
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
    }
}
